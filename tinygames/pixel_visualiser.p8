pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
spacing = 8

function _init()

end

function _update()
	if btnp(⬆️) then
		spacing += 1
	end
	
	if btnp(⬇️) then
		spacing -= 1
		if spacing < 1 then
			spacing = 1
		end
	end
end

function _draw()
	cls()
	print("spacing: "..spacing)

	for i=0, 20 do
		line(i*spacing, 0, i*spacing, 128, 3)
		line(0, i*spacing, 128, i*spacing, 3)
	end
end 

